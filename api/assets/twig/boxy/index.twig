{% extends '_layouts/default.twig' %}

{% block content  %}
  <mjml>
    <mj-body>
        {% include '_partials/header.twig' %}
        <mj-section background-color='#f3f3f3'>
          <mj-column>
              <mj-image width='170px' src='{{imgURL}}nwNZ0TW.png'></mj-image>
          </mj-column>
          <mj-column>
              <mj-text font-weight='bold' align='justify' font-size='24px' color='{{mainColor}}' font-family='helvetica'>{{titleText}}</mj-text>
              <mj-text align='justify' font-size='15px' color='#000' font-family='helvetica'>{{mainText}}</mj-text>
              {% if cta|default %}
                <mj-button align='left' background-color='{{secondaryColor}}' border-radius='40px' font-family='helvetica' font-size='12px'>{{cta}}</mj-button>
              {% endif %}
          </mj-column>
        </mj-section>
        {% include '_partials/socials.twig' %}
    </mj-body>
  </mjml>
{% endblock %}
